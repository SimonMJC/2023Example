<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#111111</item>
        <item name="colorPrimaryDark">#111111</item>
        <item name="colorAccent">#2FFFA4</item>
        <item name="actionBarTheme">@style/ActionbarTheme</item>
        <item name="android:colorBackground">#ffffff</item>
        <item name="android:statusBarColor">#ffffff</item>
        <item name="android:splashScreenTheme" tools:targetApi="s">@style/Theme.App.Starting</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.BlackRabbit" parent="AppTheme" />


    <style name="ActionbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#111111</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#ffd200</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/baseline_man_24</item>
        <item name="postSplashScreenTheme">@style/Theme.SplashEx</item>
    </style>

    <style name="Theme.SplashEx" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowSplashScreenBackground" tools:targetApi="S">#ffd200</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="S">
            @drawable/baseline_man_24
        </item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="S">#ffd200
        </item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="S">4000</item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="S">
            @drawable/baseline_man_24
        </item>
    </style>

</resources>